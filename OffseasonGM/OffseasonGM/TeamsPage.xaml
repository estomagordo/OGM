<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OffseasonGM.TeamsPage"
             Title="TeamsPage">
    <ScrollView>
        <StackLayout Padding="10" BackgroundColor="Black">
            <StackLayout Orientation="Horizontal">
                <Button Text="&lt;" Clicked="CycleBackward" BackgroundColor="Black" TextColor="White" VerticalOptions="Center"/>
                <Label x:Name="LongTeamNameLabel" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
                <Button Text="&gt;" Clicked="CycleForward" BackgroundColor="Black" TextColor="White" VerticalOptions="Center"/>
            </StackLayout>
            <Label x:Name="TeamRecordLabel" Text="" TextColor="White"/>
            <Grid x:Name="PlayerGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>                    
                </Grid.ColumnDefinitions>                
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>